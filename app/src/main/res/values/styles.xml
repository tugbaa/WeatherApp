<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="WButtonRed" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_red</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WButtonGreen" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_green</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
